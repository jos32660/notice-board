doctype html
html(lang="ko")
	head
		include ./inc/header.pug
	body
		include ./inc/navi2.pug
		.container.my-3(style="text-align: center;")
			h3.text-light.my-4= `${title}`
			form.text-left(name="memberForm" method="post" action="/main/join" onsubmit="return memberJoin(this);")
				table.table(style="border-bottom: 1px solid #fff;")
					colgroup
						col(width="20%")
						col
					tbody
						tr
							td(style="color: #fff;") ID
							td.form-inline
								input.form-control.mr-3(type="text" name="userid" id="userid" placeholder="아이디" style="max-width: 200px;" data-use="F")
								span.userid-cmt
						tr
							td(style="color: #fff;") PASSWORD
							td.form-inline
								input.form-control(type="password" name="userpw" id="userpw" style="max-width: 200px;")
								span.userpw-cmt
						tr
							td(style="color: #fff;") PASSWORD CHECK
							td.form-inline
								input.form-control(type="password" name="userpw2" id="userpw2" style="max-width: 200px;")
								span.userpw-cmt2
						tr
							td(style="color: #fff;") NAME
							td
								input.form-control(type="text" name="username" id="username" style="max-width: 200px;")
						tr
							td(style="color: #fff;") TEL
							td.form-inline
								select.form-control(name="tel1" id="tel1" style="max-width:100px;")
									option(value="" selected) SELECT
									each item in tel
										option(value=item)= item
								span.mx-2 -
								input.form-control(type="number" name="tel2" id="tel2" min="0" max="9999" style="max-width:100px;" oninput="telChk(this);")
								span.mx-2 -
								input.form-control(type="number" name="tel3" id="tel3" min="0" max="9999" style="max-width:100px;" oninput="telChk(this);")
						tr
							td(style="color: #fff;") POSTAL CODE
							td.form-inline
								input.form-control(type="text" name="post" id="post" style="max-width: 200px;" readonly)
								span &nbsp;
								button.btn.btn-danger(type="button" onclick="daumPostcode();") POSTAL CODE
						tr
							td(style="color: #fff;") LOAD NAME ADDRESS
							td
								input.form-control(type="text" name="addr1" id="addr1" readonly)
								span(id="guide" style="color:#999; display:none;")
						tr
							td(style="color: #fff;") DETAILED ADDRESS
							td.form-inline
								input.form-control(type="text" name="addr3" id="addr3" placeholder="상세주소")
								input.form-control(type="text" name="addr2" id="addr2" placeholder="참고항목" style="width: 30%; margin-left: 8px;")
				.my-3.text-center
					button.btn.btn-light SIGN IN
					button.btn.btn-danger(type="reset") RESET
		include inc/footer.pug
		script(src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js")
		script(src="/js/post_search.js")
		include inc/script.pug